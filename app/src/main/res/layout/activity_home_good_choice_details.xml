<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--头部-->
            <include layout="@layout/head_home_gc_det_layout"/>

            <LinearLayout
                android:id="@+id/ll_load_sir_ahgcd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--免费区-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_free_ahgcd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_videos_hvfl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:text="VIP会员专享区"
                    android:drawablePadding="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/sizhao_remen_icon_vip"
                    android:layout_margin="6dp"
                    />
                <!--会员区-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_price_ahgcd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!--返回键和分享键-->
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_ahgcd"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui_heiy"/>
        <ImageView
            android:id="@+id/iv_share_ahgcd"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fenxiang_fx"/>
    </RelativeLayout>

</RelativeLayout>
