<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@color/tab_indicator_color"/>

        <TextView
            android:id="@+id/tv_title_ihhl"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxEms="15"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"
            android:text="巨乳诱惑福利时间"/>

        <TextView
            android:id="@+id/tv_collection_ihhl"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/collect_home_n"
            android:layout_marginRight="10dp"
            android:text="888"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_pic_ihhl1"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_pic_ihhl2"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_pic_ihhl3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_pic_ihhl4"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_pic_ihhl5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_pic_ihhl6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/color_half_trans"/>
            <TextView
                android:id="@+id/tv_count_ihhl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2P"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:textSize="30sp"
                />
        </RelativeLayout>
        <!--<ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_pic_ihhl6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>-->
    </LinearLayout>

    <View
        android:background="@color/color_hui"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    
</LinearLayout>
