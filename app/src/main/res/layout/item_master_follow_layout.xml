<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/ripple_bg"
    android:layout_height="65dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_head_ifml"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/da_yanse_lv"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_head_ifml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_ifml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:text="维纳斯的幺女子"/>

        <TextView
            android:id="@+id/tv_id_ifml"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/color_333333"
            android:text="ID:8888"/>
    </LinearLayout>

    <!--关注-->
    <RelativeLayout
        android:id="@+id/rl_follow_tfl"
        android:layout_width="53dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:background="@drawable/follow_selector">

        <TextView
            android:id="@+id/tv_is_follow_tfl"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="已关注" />
    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dedede"/>

</RelativeLayout>
