<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f5f5f5"
    android:id="@+id/rl_title_btl"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/beauty_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:drawableLeft="@drawable/fanhui_heiy"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/fanhui_heiy"
        android:gravity="center"
        android:text="  "
        android:textColor="@color/color_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/beauty_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="魅惑美女屋"
        android:textColor="@color/color_black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/tv_follow_btl"
        android:layout_gravity="right"
        android:layout_marginRight="14dp"
        android:src="@drawable/fenxiang_fx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</FrameLayout>