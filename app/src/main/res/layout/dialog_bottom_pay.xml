<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pay_dialog_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="确认支付"
            android:textColor="#303030"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_price_dbp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="￥0.99"
        android:textColor="#303030"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="开通后即可使用VIP权限"
        android:textSize="17sp" />

    <RadioGroup
        android:id="@+id/radio_group_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:checkedButton="@+id/pack_style1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pack_style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/charge_dialog_radio_selector"
            android:paddingLeft="10dp"
            android:text="微信支付"
            android:textColor="#333333"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/pack_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:button="@drawable/charge_dialog_radio_selector"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="支付宝支付"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_pay_one"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/pay_single_btn_bg_shape"
        android:gravity="center"
        android:text="0.99元，黄金VIP"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_pay_svip"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pay_vip_btn_bg_shape"
        android:gravity="center"
        android:text="开通砖石VIP"
        android:textColor="#303030"
        android:textSize="17sp" />
</LinearLayout>